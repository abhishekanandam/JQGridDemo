<!DOCTYPE html>

<html>
<head>
    <title>@ViewBag.Title</title>

    <link href="~/Content/Stylesheets/css_flyoutverticalmenu.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/Stylesheets/JQGridDemo.css" rel="stylesheet" media="screen">

    <script src="~/Content/jquery/jquery-2.1.1.min.js" type="text/javascript"></script>
    <script src="~/Content/jquery/jquery-ui-1.10.4.min.js" type="text/javascript"></script>
    <script src="~/Content/Scripts/JQGridDemo.js" type="text/javascript"></script>

    <link href="~/Content/Stylesheets/ui.jqgrid.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/Stylesheets/jquery-ui.theme.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/themes/cupertino/jquery-ui.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/themes/cupertino/theme.css" rel="stylesheet" type="text/css" />

    <!-- language pack - MUST be included before the jqGrid javascript -->
    <script src="~/Content/jquery/i18n/grid.locale-en.js" type="text/javascript"></script>
    <!-- the jqGrid javascript runtime -->
    <script src="~/Content/jquery/jquery.jqGrid.min.js" type="text/javascript"></script>
</head>
<body>
    <div>
        <div id="container" style="width: 1200px">
                <div id="headerTitle">
                    <h2>Using jqGrid in MVC 4</h2>
                </div>

            <div id="menuwrapper">
                <ul>
                    <li>
                        <div style="z-index:99; position:absolute; ">
                            <a href=" #">Getting Started</a>
                            <ul style="list-style:none">
                                <li>@Html.RouteLink("Introduction/Home", new { Controller = "Home", Action = "Index" })</li>
                                <li>@Html.RouteLink("Initial Setup", new { Controller = "Intro", Action = "InitialSetup" })</li>
                              </ul>
                        </div>
                    </li>
                    <li>
                        <div style="z-index:99; position:absolute; ">
                            <a href=" #">Beginning Grids</a>
                            <ul style="list-style:none">
                                <li>@Html.RouteLink("First Grid", new { Controller = "Intro", Action = "FirstGrid" })</li>
                                <li>@Html.RouteLink("Caption and Auto Height", new { Controller = "Intro", Action = "CaptionAndAutoHeight" })</li>
                                <li>@Html.RouteLink("Paging", new { Controller = "Intro", Action = "Paging" })</li>
                                <li>@Html.RouteLink("Formatting", new { Controller = "Intro", Action = "Formatting" })</li>
                                <li>@Html.RouteLink("Searching", new { Controller = "Intro", Action = "Searching" })</li>
                              </ul>
                        </div>
                    </li>
                    <li>
                        <div style="z-index:99; position:absolute; ">
                            <a href="#">Working with Real Data</a>
                            <ul style="list-style:none">
                                <li>@Html.RouteLink("Data from a Backend", new { Controller = "Employee", Action = "Employees" })</li>
                                <li>@Html.RouteLink("Searching Revisited", new { Controller = "Searching", Action = "SearchingRevisited" })</li>
                                <li>@Html.RouteLink("Add/Edit/Delete", new { Controller = "Editing", Action = "AddEditDelete" })</li>
                                <li>@Html.RouteLink("Client-Side Validation", new { Controller = "Editing", Action = "Validation" })</li>
                                <li>@Html.RouteLink("Server-Side Validation", new { Controller = "ServerValidation", Action = "ValidationAndExceptions" })</li>
                            </ul>
                        </div>
                    </li>
                    <li>
                        <div style="z-index:99; position:absolute; ">
                            <a href="#">Other Topics</a>
                            <ul style="list-style:none">
                                <li>@Html.RouteLink("Events", new { Controller = "Events", Action = "HarnessingEvents" })</li>
                                <li>@Html.RouteLink("Master-Detail Grids", new { Controller = "MasterDetail", Action = "MasterDetailGrids" })</li>
                                <li>@Html.RouteLink("Exporting", new { Controller = "OtherFeatures", Action = "Exporting" })</li>
                                <li>@Html.RouteLink("Inline Editing", new { Controller = "Editing", Action = "InlineEditing" })</li>                            
                                <li>@Html.RouteLink("Caching", new { Controller = "Caching", Action = "MemoryCaching" })</li>
                                <li>@Html.RouteLink("An Evolving Tool", new { Controller = "MovingTarget", Action = "AnEvolvingTool" })</li>
                                <li>@Html.RouteLink("Server-Side Paging", new { Controller = "ServerSidePaging", Action = "ServerSidePaging" })</li>
                            </ul>
                        </div>
                    </li>
                </ul>
            </div>

            <div id="content" style="background-color:#FFFFFF; float:left;">
                <div>
                    @RenderBody()
                </div>
            </div>

            <div id="footer">
                <a href="mailto:tomyee3@verizon.net" target="_top">tomyee3@verizon.net</a>
            </div>
        </div>
    </div>
</body>
</html>

